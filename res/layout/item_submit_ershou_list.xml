<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
 <RelativeLayout
       android:id="@+id/item_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
          >
                    <ImageView
            android:id="@+id/iv_submit_ershou_list"
            android:layout_width="100dp"
            android:layout_height="67dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:paddingBottom="6dp"
            android:src="@drawable/touxiang3" />

            <TextView
                android:id="@+id/tv_submit_ershou_list_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_submit_ershou_list_title"
                android:layout_below="@+id/tv_submit_ershou_list_title"
                android:layout_marginTop="2dp"
                android:text="龙岗新区/布吉/国展苑/A1栋404"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_submit_ershou_list_zongjia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_submit_ershou_list_detail"
                android:layout_toLeftOf="@+id/textView1"
                android:text="450"
                android:textColor="#ff0000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_submit_ershou_list_louceng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_submit_ershou_list_detail"
                android:layout_below="@+id/tv_submit_ershou_list_detail"
                android:layout_marginTop="2dp"
                android:text="中层(共26层)"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_submit_ershou_list_chenhu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_alignLeft="@+id/tv_submit_ershou_list_louceng"
                android:layout_below="@+id/tv_submit_ershou_list_louceng"
                android:layout_marginTop="2dp"
                android:text="称呼 : / 15577330719 / 自售"
                android:paddingBottom="6dp"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_submit_ershou_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_alignTop="@+id/iv_submit_ershou_list"
                android:layout_toRightOf="@+id/iv_submit_ershou_list"
                android:text="深圳大鹏新区葵涌"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_submit_ershou_list_detail"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="万"
                android:textColor="#ff0000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_submit_ershou_list_imaup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_submit_ershou_list_louceng"
                android:layout_alignRight="@+id/textView1"
                android:text="照片上传"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_submit_ershou_list_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_submit_ershou_list_chenhu"
                android:layout_alignRight="@+id/textView1"
                android:text="编辑"
                android:textSize="14sp" />

        </RelativeLayout>
    

</RelativeLayout>
