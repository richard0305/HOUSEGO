<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#f0eff5"
    android:layout_height="match_parent" >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        
        android:background="@drawable/btn_submit_shap2"
        >
    
 <RelativeLayout
       android:id="@+id/item_left"
        android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
          >
         
     <TextView
                android:id="@+id/tv_submit_ershou_list_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="10dp"
                android:text="编辑"
                android:textSize="14sp" />
     	
     
     
     
    			 <Button
    			     android:layout_below="@+id/tv_submit_ershou_list_edit"
    			     android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fengexian"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="#c9c9cb" />
    			 
                    <ImageView
            android:id="@+id/iv_submit_ershou_list"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_below="@+id/line"
            android:scaleType="fitXY"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="6dp"
            android:src="@drawable/touxiang3" />

            <TextView
                android:id="@+id/tv_submit_ershou_list_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_submit_ershou_list_title"
                android:layout_below="@+id/tv_submit_ershou_list_title"
                android:layout_marginTop="2dp"
                android:text="龙岗新区/布吉/国展苑"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_submit_ershou_list_zongjia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_submit_ershou_list_detail"
                android:layout_toLeftOf="@+id/textView1"
                android:text="450"
                android:textColor="#ff0000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_submit_ershou_list_louceng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_submit_ershou_list_detail"
                android:layout_below="@+id/tv_submit_ershou_list_detail"
                android:layout_marginTop="2dp"
                android:text="中层(共26层)"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_submit_ershou_list_chenhu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_alignLeft="@+id/tv_submit_ershou_list_louceng"
                android:layout_below="@+id/tv_submit_ershou_list_louceng"
                android:layout_marginTop="2dp"
                android:text="15577330719 / 自售"
                android:paddingBottom="6dp"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_submit_ershou_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_alignTop="@+id/iv_submit_ershou_list"
                android:layout_toRightOf="@+id/iv_submit_ershou_list"
                android:text="深圳大鹏新区葵涌"
                 android:singleLine="true"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_submit_ershou_list_detail"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:text="万"
                android:textColor="#ff0000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_submit_ershou_list_hetong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_submit_ershou_list"
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:text="上传合同"
               android:padding="10dp"
               android:textColor="#333"
                android:textSize="12sp" />
            
            <TextView
                android:id="@+id/tv_submit_ershou_list_sfz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_submit_ershou_list_hetong"
                android:layout_toLeftOf="@+id/tv_submit_ershou_list_hetong"
                android:text="上传身份证"
                  android:textColor="#333"
                android:textSize="12sp" />
            
            

            

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
