<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="RtlSymmetry,ContentDescription,RtlHardcoded,HardcodedText,TextFields" >

    <Button
        android:id="@+id/btn_line"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/rl_phonenumber"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#fefefe" />

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:id="@+id/rl_phonenumber"
        android:layout_width="match_parent"
        android:layout_height="40dp" >

        <ImageView
            android:id="@+id/iv_iphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:src="@drawable/iphone_16px" />

        <EditText
            android:id="@+id/et_login_phonenumber"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_iphone"
            android:background="@null"
            android:hint="请输入手机号码"
            android:textSize="16sp" >
        </EditText>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:id="@+id/rl_login_lock"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/btn_line" >

        <ImageView
            android:id="@+id/iv_lock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:src="@drawable/lock_16px" />

        <EditText
            android:id="@+id/et_login_lock"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_lock"
            android:background="@null"
            android:hint="请输入密码"
            android:textSize="16sp" >
        </EditText>
    </RelativeLayout>

</RelativeLayout>