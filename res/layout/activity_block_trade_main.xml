<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dumu.housego.BlockTradeMainActivity" >

    
    <RelativeLayout
        android:id="@+id/rl_block_trade_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#e12442" >

        <ImageView
            android:id="@+id/iv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_MsM"
            android:layout_marginRight="14dp"
            android:layout_toLeftOf="@+id/iv_MsM"
            android:src="@drawable/location_white_40x31" />

        <ImageView
            android:id="@+id/iv_MsM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/msg_white_40x31" />

        <LinearLayout
            android:id="@+id/ll_block_trade_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                
                android:src="@drawable/white_left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返回"
                android:layout_gravity="center_vertical"
                android:textColor="#ffffff"
                android:textSize="16sp" />
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_location"
            android:layout_toRightOf="@+id/ll_block_trade_back"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#6e1020"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/search_white_30x30" />

            <EditText
                android:id="@+id/et_block_trade_search"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:text="请输入小区或商圈名"
                android:textColor="#f2f2f2"
                android:textSize="14sp" >
            </EditText>
        </LinearLayout>
    </RelativeLayout>
    
    <LinearLayout
        android:id="@+id/blocktrade_ll_spinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/rl_block_trade_title" >
         
        <Spinner 
            android:paddingLeft="20dp"
            android:id="@+id/maphouse_sp1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#F2F2F2"
            android:layout_gravity="center_vertical"
            android:spinnerMode="dropdown"
            android:layout_height="match_parent"
            android:entries="@array/maphousearea"
            />
        
        <Button 
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#c9c9cb"
            />
        <Spinner 
            android:id="@+id/maphouse_sp2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#F2F2F2"
            android:paddingLeft="30dp"
            
            android:layout_gravity="center_vertical"
            android:spinnerMode="dropdown"
            android:layout_height="match_parent"
            android:entries="@array/maphousesaixuan"
            />
         <Button 
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#c9c9cb"
            />
         <Spinner 
            android:id="@+id/maphouse_sp3"
            android:layout_width="0dp"
            android:spinnerMode="dropdown"
            android:layout_weight="1"
            android:background="#F2F2F2"
             android:paddingLeft="30dp"
            android:layout_height="match_parent"
            android:entries="@array/maphousepaixun"
            />
        
    </LinearLayout>
    
 
     <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/lv_blocktrade"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/blocktrade_ll_spinner" 
        />


</RelativeLayout>
