<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:background="@drawable/btn_submit_shap"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ee3a43"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="#eee"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_dialog_message1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:background="#ffffff"
            android:gravity="center"
            android:padding="3dp"
            android:text="男"
            android:textSize="16sp" />

        <Button
            android:layout_width="match_parent"
             android:layout_height="@dimen/fengexian"
            android:background="#c9c9cb" />

        <TextView
            android:id="@+id/tv_dialog_message2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:background="#ffffff"
            android:gravity="center"
            android:padding="3dp"
            
            android:text="女"
            android:textSize="16sp" />

        <Button
            android:layout_width="match_parent"
               android:layout_height="@dimen/fengexian"
            android:background="#c9c9cb" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:orientation="horizontal" >

        <Button
            
            android:id="@+id/btn_dialog_cancle"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:text="取消"
            android:background="#ffffff"
            />

  
    </LinearLayout>

</LinearLayout>