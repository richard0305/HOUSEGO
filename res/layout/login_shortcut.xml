<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="RtlSymmetry,ContentDescription,RtlHardcoded,HardcodedText,TextFields" >

    <Button
        android:id="@+id/btn_line"
        android:layout_below="@+id/rl_phonenumber"
        android:layout_width="match_parent"
           android:layout_height="@dimen/fengexian"
        android:background="#c9c9cb" />

    <RelativeLayout
        android:id="@+id/rl_phonenumber"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="50dp" >
        
        <Button
        android:id="@+id/btn_line3"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
         android:layout_height="@dimen/fengexian"
        android:background="#c9c9cb" />

        <ImageView
            android:id="@+id/iv_iphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:src="@drawable/iphone_16px" />

        <EditText
            android:id="@+id/et_short_login_phonenumber"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_iphone"
            android:background="@null"
            android:maxLength="11"
            android:hint="请输入手机号码"
            android:textSize="13sp" >
        </EditText>

        <Button
            android:id="@+id/btn_quicklogin_sendcode"
            android:layout_width="wrap_content"
            android:paddingLeft="5dp"
        android:paddingRight="5dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/shap_code_button"
            android:text="发送验证码"
            android:textSize="14sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_short_login_lock"
        android:layout_width="match_parent"
        
        android:layout_height="50dp"
        android:layout_below="@+id/btn_line" >

        <ImageView
            android:id="@+id/iv_lock_quick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:src="@drawable/lock_16px" />

        <EditText
            android:id="@+id/et_short_login_lock_quick"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_lock_quick"
            android:background="@null"
            android:hint="请输入短信验证码"
            android:textSize="13sp" >
        </EditText>
        
        <Button
        android:id="@+id/btn_line4"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
          android:layout_height="@dimen/fengexian"
        android:background="#c9c9cb" />
        
    </RelativeLayout>
    
      
        <Button 
            android:id="@+id/btn_short_Login"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="立即登录"
            android:background="@drawable/btn_submit_shap"
            android:layout_below="@+id/rl_short_login_lock"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            />

</RelativeLayout>