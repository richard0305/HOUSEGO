<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout 
        android:id="@+id/ll_kanfangdate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        >
     <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
     	
        android:layout_marginTop="100dp" >

        <com.dumu.housego.util.CarouselViewPager
            android:id="@+id/mCarouselView"
            android:layout_width="200dp"
            android:layout_height="200dp" >
        </com.dumu.housego.util.CarouselViewPager>

        <!-- 轮播图片的指示点 -->

        <LinearLayout
            android:id="@+id/pointLayout"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_alignBottom="@+id/mCarouselView"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal" >

            
        </LinearLayout>

    </RelativeLayout>
    
    
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_noLogin_house"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="把房子加入带看清单" />
    
    <Button
        android:id="@+id/btn_house_Login"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="#EE3A43"
        android:text="去预约"
        android:textColor="#ffffff"
        android:textSize="14sp" />
    
    </LinearLayout>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_kanfangdate_list"
        android:visibility="gone"
        >
      <ListView 
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/lv_kandangdate"
          ></ListView>  
        
        
    </RelativeLayout>
    
    
    

</RelativeLayout>