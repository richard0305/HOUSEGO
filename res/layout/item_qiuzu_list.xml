<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="match_parent" >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        
        <TextView 
            android:id="@+id/tv_qiuzulist_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="q"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            />
		<TextView 
		    android:id="@+id/tv_qiuzulist_detail"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="sssssssssssssssssss"
		    android:layout_marginLeft="10dp"
		    android:layout_marginTop="5dp"
		    android:layout_below="@+id/tv_qiuzulist_title"
		    /> 
		     
        <TextView 
            android:id="@+id/tv_qiuzulist_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="qssssssssss"
            android:layout_below="@+id/tv_qiuzulist_detail"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            
            />         
        
        <Button 
            android:paddingBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tv_qiuzulist_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fengexian"
            android:background="#c9c9cb"
            />
        
    </RelativeLayout>
    
    

</RelativeLayout>
