<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:ignore="ObsoleteLayoutParam,HardcodedText,RtlHardcoded,ContentDescription,UselessParent" >

    <LinearLayout
        android:id="@+id/item_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:background="@drawable/selector_bt_item"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/iv_chengjiaoershou"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:paddingBottom="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/touxiang3" />

            <TextView
                android:id="@+id/tv_chengjiaoershou_housedetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_chengjiaoershou_title"
                android:layout_below="@+id/tv_chengjiaoershou_title"
                android:layout_marginTop="3dp"
                android:text="金葵花园"
                android:textColor="#b1b4b5"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/tv_chengjiaoershou_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/iv_chengjiaoershou"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/iv_chengjiaoershou"
                android:text="深圳大鹏新区葵涌"
                android:singleLine="true"
                android:textColor="#333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_chengjiaoershou_jianzhutype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_chengjiaoershou_housedetail"
                android:layout_below="@+id/tv_chengjiaoershou_housedetail"
                android:text="签约时间:"
                android:textColor="#b1b4b5"
                android:layout_marginTop="3dp"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_chengjiaoershou_junjia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_chengjiaoershou_jianzhutype"
                android:layout_below="@+id/tv_chengjiaoershou_jianzhutype"
                android:singleLine="true"
                android:text="5922元/㎡"
                android:layout_marginTop="3dp"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_chengjiaoershou_jine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_chengjiaoershou_junjia"
                android:layout_marginLeft="18dp"
                android:layout_toRightOf="@+id/tv_chengjiaoershou_junjia"
                android:text="万"
                android:textColor="#ff0000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_chengjiao_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_chengjiaoershou_jianzhutype"
                android:layout_toRightOf="@+id/tv_chengjiaoershou_jianzhutype"
                android:text="TextView" />

        </RelativeLayout>

    </LinearLayout>
    
        <RelativeLayout
        android:id="@+id/item_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/gray" >

        <TextView
            android:id="@+id/item_right_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="取消关注"
            android:textColor="@color/floralwhite" />

     
    </RelativeLayout>

</LinearLayout>