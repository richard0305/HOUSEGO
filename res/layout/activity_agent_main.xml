<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c9c9cb"
    tools:context="com.dumu.housego.AgentMainActivity"
    tools:ignore="TextFields,HardcodedText,RtlHardcoded,InefficientWeight,ContentDescription,LabelFor" >

    <RelativeLayout
        android:id="@+id/rl_agent_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="#ffffff" >

        <ImageView
            android:id="@+id/iv_agent_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:src="@drawable/gray_left" />

        <ImageView
            android:id="@+id/iv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/msg_gray_44x34" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:text="经纪人列表" />

    </RelativeLayout>
    <Button
        android:id="@+id/btn_line"
        android:layout_width="match_parent"
        android:layout_below="@+id/rl_agent_title"
        android:layout_height="1dp"
        android:background="#c9c9cb" />

    <LinearLayout
        android:id="@+id/ll_agent_search"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/btn_line"
        android:layout_centerHorizontal="true"
       android:background="#F0F0F0"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/et_ershoufang_search"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="4.43"
             android:layout_marginLeft="20dp"
       	android:background="#ffffff"
            android:ems="10"
            android:layout_gravity="center"
            android:text="请输入商圈、小区或经纪人的姓名、电话"
            android:textColor="#D8D7DA"
            android:textSize="14sp" >

            <requestFocus />
        </EditText>
        
        <ImageView
            android:id="@+id/iv_agent_search"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:src="@drawable/search_red_30x30" />
    </LinearLayout>
    
     <Button 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/btn_1"
            android:background="#c9c9cb"
             android:layout_below="@+id/ll_agent_search"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/btn_1" >
         
        <Spinner 
            android:paddingLeft="20dp"
            android:id="@+id/maphouse_sp1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#F2F2F2"
            android:layout_gravity="center_vertical"
            android:spinnerMode="dropdown"
            android:layout_height="match_parent"
            android:entries="@array/maphousearea"
            />
        
        <Button 
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#c9c9cb"
            />
        <Spinner 
            android:id="@+id/maphouse_sp2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#F2F2F2"
            android:paddingLeft="30dp"
            
            android:layout_gravity="center_vertical"
            android:spinnerMode="dropdown"
            android:layout_height="match_parent"
            android:entries="@array/maphousesaixuan"
            />
         <Button 
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#c9c9cb"
            />
         <Spinner 
            android:id="@+id/maphouse_sp3"
            android:layout_width="0dp"
            android:spinnerMode="dropdown"
            android:layout_weight="1"
            android:background="#F2F2F2"
             android:paddingLeft="30dp"
            android:layout_height="match_parent"
            android:entries="@array/maphousepaixun"
            />
        
    </LinearLayout>

</RelativeLayout>
