<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dumu.housego.activity.LoginActivity"
    tools:ignore="RtlSymmetry,HardcodedText,RtlHardcoded,UselessParent,TextFields,ContentDescription" >

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:background="#ee3a43" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingLeft="5dp"
            android:text="注册"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/ll_back_login"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@+id/textView1"
                android:src="@drawable/white_left" />

            <TextView
                android:id="@+id/tv_logincancle"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:paddingLeft="5dp"
                android:text="登录"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="18sp" />
        </LinearLayout>
    </RelativeLayout>

    <EditText
        android:id="@+id/et_smscode"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/et_phonenumb"
        android:layout_marginTop="5dp"
        android:background="@null"
        android:hint="请输入短信验证码"
        android:paddingLeft="10dp"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/et_smscode"
        android:layout_marginTop="5dp"
        android:background="@null"
        android:hint="请输入新密码(至少6位)"
        android:paddingLeft="10dp"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_repassword"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/et_password"
        android:layout_marginTop="5dp"
        android:background="@null"
        android:hint="请再次输入密码"
        android:paddingLeft="10dp"
        android:textSize="16sp" />

    

    <EditText
        android:id="@+id/et_phonenumb"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/rl_title"
        android:layout_marginTop="17dp"
        android:background="@null"
        android:hint="请输入手机号码"
        android:paddingLeft="10dp"
        android:textSize="16sp" />
    
    
    
    <LinearLayout 
        android:id="@+id/ll_regist_type"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/et_repassword"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:gravity="center"
            android:text="注册类型："
            android:textSize="18sp" />
      
      <RadioGroup 
        android:id="@+id/rg_regist_type"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignLeft="@+id/rg_regist_type"
        >

        
         <RadioButton
        android:id="@+id/rb_domestic_consumer"
        android:layout_width="wrap_content"
        android:checked="true"
        android:layout_height="40dp"
        android:text="普通用户" />
          <RadioButton
        android:id="@+id/rb_agent"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="经纪人" />
    </RadioGroup>
        
    </LinearLayout>
    
   
    

    <Button
        android:id="@+id/btn_sendcode"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignBaseline="@+id/et_phonenumb"
        android:layout_alignRight="@+id/btn_Regist"
        android:layout_marginRight="24dp"
        android:background="#ffffff"
        android:text="发送验证码"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btn_Regist"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_below="@+id/et_repassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp"
        android:background="#ee3a43"
        android:text="立即注册"
        android:textColor="#ffffff" />

 

   

</RelativeLayout>