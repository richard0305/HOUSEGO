<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
         >
      

        <ImageView
            android:id="@+id/iv_guanzhuershou"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/touxiang3" />

        
        <RelativeLayout 
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        
        <TextView
            android:id="@+id/tv_guanzhu_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="深圳大鹏新区葵涌"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_guanzhu_xiaoquname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_guanzhu_title"
            android:layout_below="@+id/tv_guanzhu_title"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:text="金葵花园" />

        <TextView
            android:id="@+id/tv_guanzhu_fangxing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_guanzhu_xiaoquname"
            android:layout_marginLeft="10dp"
             android:textSize="12sp"
            android:layout_toRightOf="@+id/tv_guanzhu_xiaoquname"
            android:text="2室2厅" />

        <TextView
            android:id="@+id/tv_guanzhu_area"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_guanzhu_fangxing"
              android:textSize="12sp"
            android:layout_toRightOf="@+id/tv_guanzhu_fangxing"
            android:text="76平米" />

        <TextView
            android:id="@+id/tv_guanzhu_chaoxiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_guanzhu_area"
            android:layout_alignBottom="@+id/tv_guanzhu_area"
            android:layout_marginLeft="10dp"
             android:textSize="12sp"
            android:layout_toRightOf="@+id/tv_guanzhu_area"
            android:text="南" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_guanzhu_chaoxiang"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:textSize="14sp"
            android:textColor="#ff0000"
            android:text="万" />

        <TextView
            android:id="@+id/tv_guanzhu_zongjia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_guanzhu_area"
            android:layout_toLeftOf="@+id/textView1"
            android:textSize="16sp"
            android:textColor="#ff0000"
            android:text="45" />

        <TextView
            android:id="@+id/tv_guanzhu_louceng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_guanzhu_xiaoquname"
            android:layout_below="@+id/tv_guanzhu_xiaoquname"
            android:layout_marginTop="6dp"
            android:textSize="12sp"
            android:text="中层(共18层)" />

        <TextView
            android:id="@+id/tv_guanzhu_jianzhutype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_guanzhu_louceng"
            android:layout_toRightOf="@+id/tv_guanzhu_louceng"
             android:textSize="12sp"
             android:layout_marginLeft="10dp"
            android:text="5年房龄板塔结合" />

        <TextView
            android:id="@+id/tv_guanzhu_junjia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_guanzhu_jianzhutype"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:textSize="12sp"
            android:text="5922元/㎡" />

        <TextView
            android:id="@+id/tv_guanzhu_ditiexian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_guanzhu_louceng"
            android:layout_below="@+id/tv_guanzhu_louceng"
            android:layout_marginTop="6dp"
            android:textSize="12sp"
            android:text="4号线" />
        </RelativeLayout>
    </LinearLayout>
    

</RelativeLayout>
