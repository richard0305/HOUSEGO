<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:ignore="ObsoleteLayoutParam,HardcodedText,RtlHardcoded,ContentDescription,UselessParent" >

    <LinearLayout
        android:id="@+id/item_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:background="@drawable/selector_bt_item"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_guanzhuershou"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/touxiang3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/tv_guanzhu_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="深圳大鹏新区葵涌"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_guanzhu_xiaoquname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_guanzhu_title"
                android:layout_below="@+id/tv_guanzhu_title"
                android:layout_marginTop="10dp"
                android:text="金葵花园"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_guanzhu_fangxing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_guanzhu_xiaoquname"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_guanzhu_xiaoquname"
                android:text="2室2厅"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_guanzhu_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_guanzhu_fangxing"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_guanzhu_fangxing"
                android:text="76平米"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_guanzhu_chaoxiang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_guanzhu_area"
                android:layout_alignBottom="@+id/tv_guanzhu_area"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_guanzhu_area"
                android:text="南"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_guanzhu_chaoxiang"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:text="万"
                android:textColor="#ff0000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_guanzhu_zongjia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_guanzhu_area"
                android:layout_toLeftOf="@+id/textView1"
                android:text="45"
                android:textColor="#ff0000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_guanzhu_louceng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_guanzhu_xiaoquname"
                android:layout_below="@+id/tv_guanzhu_xiaoquname"
                android:layout_marginTop="6dp"
                android:text="中层(共18层)"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_guanzhu_jianzhutype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tv_guanzhu_louceng"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_guanzhu_louceng"
                android:text="5年房龄板塔结合"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_guanzhu_junjia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_guanzhu_jianzhutype"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:text="5922元/㎡"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_guanzhu_ditiexian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_guanzhu_louceng"
                android:layout_below="@+id/tv_guanzhu_louceng"
                android:layout_marginTop="6dp"
                android:text="4号线"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>
    
        <RelativeLayout
        android:id="@+id/item_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/gray" >

        <TextView
            android:id="@+id/item_right_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="取消关注"
            android:textColor="@color/floralwhite" />

     
    </RelativeLayout>

</LinearLayout>