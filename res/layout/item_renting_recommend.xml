<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText,RtlHardcoded,SmallSp,ContentDescription" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp" >

        <ImageView
            android:id="@+id/iv_ershoufang_img"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@drawable/appicon120x120" />

        <TextView
            android:id="@+id/tv_ershoufang_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_ershoufang_img"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/iv_ershoufang_img"
            android:singleLine="true"
            android:text="南北通透❤主卧朝南❤明厨明卫❤带福田学位"
            android:textColor="#333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_ershoufang_price_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_ershoufang_title"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/iv_ershoufang_img"
            android:text="3室1厅 120㎡ 南"
            android:textColor="#b1b4b5"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_ershoufang_totalprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_ershoufang_price_area"
            android:layout_alignBottom="@+id/tv_ershoufang_price_area"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@+id/tv_ershoufang_wan"
            android:text="300"
            android:textColor="#ff0000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_ershoufang_wan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_ershoufang_totalprice"
            android:layout_alignBottom="@+id/tv_ershoufang_totalprice"
            android:layout_alignParentRight="true"
            android:text="/月"
            android:textColor="#ff0000"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_ershoufang_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_ershoufang_price_area"
            android:layout_below="@+id/tv_ershoufang_price_area"
            android:layout_marginTop="5dp"
            android:text="深圳 龙岗新区 平湖"
            android:textColor="#b1b4b5"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_ershou_biaoqian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_ershoufang_address"
            android:layout_below="@+id/tv_ershoufang_address"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape_textview_biaoqian1"
            android:padding="1dp"
            android:text="TextView"
            android:textColor="#f4c600"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_ershou_biaoqian2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_ershou_biaoqian"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/tv_ershou_biaoqian"
            android:background="@drawable/shape_textview_biaoqian2"
            android:padding="1dp"
            android:text="房东信赖"
            android:textColor="#11cd6e"
            android:textSize="10sp"
            android:visibility="gone" />

    </RelativeLayout>

</RelativeLayout>