<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    >
		
	    <TextView 
	           android:id="@+id/tv_wheel_cancle"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="取消"
	        android:padding="10dp"
	        android:textSize="14sp"
	        />	    
	        
	       <TextView 
	           android:id="@+id/tv_wheel_sure"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="确定"
	        android:layout_alignParentRight="true"
	        android:padding="10dp"
	        android:textSize="14sp"
	        />	
	     <TextView 
	         android:id="@+id/tv_wheel_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="选择期望厅室"
	        android:padding="10dp"
	        android:textSize="14sp"
	        android:layout_centerInParent="true"
	        />	
	    
	</RelativeLayout>
    
    
    

    <Button
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c9c9cb" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/btn_submit_shap2"
        android:orientation="horizontal" >


        <com.aigestudio.wheelpicker.view.WheelPicker
            android:id="@+id/zulin_wheel1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
  <com.aigestudio.wheelpicker.view.WheelPicker
            android:id="@+id/zulin_wheel2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    <com.aigestudio.wheelpicker.view.WheelPicker
            android:id="@+id/zulin_wheel3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
     
    </LinearLayout>

</LinearLayout>